<lc:LocusWindow x:Class="LocusWindowTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:lc="clr-namespace:LocusCommon.Windows;assembly=LocusCommon"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocusWindowTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" IsClosed="{Binding Binding_IsClosed}">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Close" Command="{Binding CloseButtonCommand}"/>
    </Grid>
</lc:LocusWindow>
